#!/bin/bash -x
#COBALT -t 60
#COBALT -q debug-flat-quad
#COBALT -A ATPESC2017

case=$1
test_type=$2
rpn=$3
nprocs=$(( COBALT_JOBSIZE*rpn ))

thr=1

echo $case     >  SESSION.NAME
echo `pwd`'/' >>  SESSION.NAME
touch $case.rea
rm -f ioinfo
mv -f $case.his $case.his1
mv -f $case.sch $case.sch1

aprun -n $nprocs \
      -N $rpn \
      -d $thr \
      -cc depth \
      -j 1 \
      ./nek5000 > ${case}.log.${test_type}.${nprocs} 2>&1

exit $?
